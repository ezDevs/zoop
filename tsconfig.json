{
    "compilerOptions": {
        "esModuleInterop": true,
        "lib": [
            "esnext",
            "esnext.asynciterable",
            "dom"
        ],
        "target": "es5",
        "downlevelIteration": true,
        "strictNullChecks": true,
        "importHelpers": true,
        "module": "commonjs",
        "lib": [
            "es2017",
            "es7",
            "es6",
            "dom"
        ],
        "declaration": true,
        "outDir": "dist",
    },
    "exclude": [
        "node_modules",
        "dist/*",
        "examples/*",
        "tests/*"
    ]
}